.container {
  position: relative;

  b {
    font-size: 14px;
    color: #999;
    position: absolute;
    z-index: 0;
    left: 50%;
    top: 50%;
    margin-left: -84px;
    margin-top: -10px;
  }

  > div {
    border: 1px dashed #d9d9d9;
    border-radius: 6px;
    padding: 5px;
    min-height: 300px;
    position: relative;
    z-index: 1px;
    &:hover {
      border-color: #2db7f5;
    }
  }
}
