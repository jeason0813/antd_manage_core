.debug {
  border: 1px dashed #ff0000;
  position: relative;
  border-radius: 6px;
  display: inline-block;
  cursor:help;
}

.info {
  display: none;
  position: absolute;
  top: 25px;
  left: 0;
  z-index: 100;
  background-color: #333333;
  border-radius: 6px;
  color: #FFF;
  min-width: 100px;
  height: 20px;
  font-size: 9px;
  line-height: 20px;
  opacity: .7;
  padding : 3px;
}

.debug:hover .info {
  display: inline-table;
}

